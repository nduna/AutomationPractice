  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}\\testcafe\\runfiletoexecute.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Current File reporter",
      "program": "${workspaceFolder}/node_modules/testcafe/bin/testcafe.js",
      "args": ["chrome", "${file}", "--reporter", "html:reports/reportname.html", "-s", "takeOnFails=true"],
      "skipFiles": ["<node_internals>/**/*.js"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Test Current File video",
      "program": "${workspaceFolder}/node_modules/testcafe/bin/testcafe.js",
      "args": ["chrome", "${file}", "--reporter", "html:reports/reportname.html", "--video", "./reports/video"],
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
